<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.spring.projectjs.jdbc.MemberMapper">

    <resultMap id="MemberLocMap" type="org.spring.projectjs.map.MemberLocation">
        <result column="USER_ID" property="userId"/>
        <result column="ADDRESS" property="address"/>
    </resultMap>

    <select id="findByUserId" parameterType="string" resultMap="MemberLocMap">
        SELECT USER_ID,ADDRESS
        FROM  MEMBER   <!-- 실제 테이블명으로 바꿔주세요 -->
        <!--  WHERE  USER_ID =   -->
        WHERE USER_ID = #{userId, jdbcType=VARCHAR}
    </select>

</mapper>
